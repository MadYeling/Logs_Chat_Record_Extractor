<hc:Window x:Class="Logs_Chat_Record_Extractor_WPF.FileChooser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Logs_Chat_Record_Extractor_WPF"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="请选择日志文件" Height="120" Width="600">
    <Canvas>
        <hc:TextBox x:Name="filePath" HorizontalAlignment="Left" VerticalAlignment="Center" Width="418" Canvas.Left="30" Canvas.Top="25" IsReadOnly="True"></hc:TextBox>
        <Button x:Name="choose" Click="Choose_OnClick" Content="选择文件" HorizontalAlignment="Left" Canvas.Left="453" Canvas.Top="25"/>
        <Button x:Name="load" Click="Load_OnClick" Content="加载" HorizontalAlignment="Left" Canvas.Left="528" Canvas.Top="25"/>
    </Canvas>
</hc:Window>
